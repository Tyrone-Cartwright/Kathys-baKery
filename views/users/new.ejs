<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body class="user-new user-bg">
    <div class="user-container">
      <div class="user-title">New User Profile</div>
      <form class="new-user-form" action="/user" method="POST">
        <div class="new-user-details">
          <div class="input-box">
            <label class="details" for="name">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Name"
              required
            />
          </div>
          <div class="input-box">
            <label class="details" for="password">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="password"
              required
            />
          </div>
          <div class="input-box">
            <label class="details" for="email">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Email"
              required
            />
          </div>
          <div class="input-box">
            <label class="details" for="address">Address</label>
            <input
              type="text"
              name="address"
              id="address"
              placeholder="address"
              required
            />
          </div>
          <div class="input-box">
            <label class="details" for="phone">Phone</label>
            <input
              type="phone"
              name="phone"
              id="phone"
              placeholder="phone"
              required
            />
          </div>
          <div class="input-box">
            <label class="details" for="employee_id">Employee ID</label>
            <input
              type="number"
              name="employee_id"
              id="employee_id"
              placeholder="Employee ID"
            />
          </div>
          <div class="input-box">
            <label class="details" for="hrsworked">Hours Worked</label>
            <input
              type="number"
              name="hrsworked"
              id="hrsworked"
              placeholder="Hours Worked"
            />
          </div>
          <div class="input-box">
            <label class="details" for="salary">Salary</label>
            <input
              type="number"
              name="salary"
              id="salary"
              placeholder="Salary"
            />
          </div>
          <div class="button">
            <input type="submit" value="Add New User" />
            <a href="/user"><ion-icon name="arrow-back-outline"></ion-icon></a>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
