<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body new-menu-body>
    <div class="new-container">
      <div class="new-title">New Menu Item</div>
      <form class="new-menu" action="/menu" method="POST">
        <div class="new-menu-details">
          <div class="input-box">
            <label class="details" for="name">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Name"
              required
            />
          </div>
          <div class="input-box">
            <label class="details" for="description">Description</label>
            <input
              type="text"
              name="description"
              id="description"
              placeholder="Description"
              required
            />
          </div>
          <div class="input-box">
            <label class="details" for="image">Image</label>
            <input
              type="url"
              name="image"
              id="image"
              placeholder="Image"
              required
            />
          </div>
          <div class="input-box">
            <label class="details" for="price">Price</label>
            <input
              type="number"
              name="price"
              id="price"
              placeholder="Price"
              required
            />
          </div>
          <div class="input-box">
            <label class="details" for="qty">Quantity</label>
            <input
              type="number"
              name="qty"
              id="qty"
              placeholder="Qty"
              required
            /><br />
          </div>
          <div class="input-box">
            <label class="details" for="preparedBy">Prepared By</label>
            <input
              type="text"
              name="preparedBy"
              id="preparedBy"
              placeholder="Prepared By"
              required
            />
          </div>
        </div>
        <div class="button">
          <input type="submit" value="Add New Menu Item" />
        </div>
      </form>
    </div>
  </body>
</html>
