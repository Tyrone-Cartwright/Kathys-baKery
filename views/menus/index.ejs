<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <header><%- include('../partials/header.ejs') %></header>
    <main>
      <h2 class="delicious">Bakery Deliciousness</h2>
      <div class="menu-container">
        <% for(let i = 0; i < menu.length; i++) { %>
        <div class="menu-card">
          <h3><%= menu[i].name %></h3>
          <img src="<%= menu[i].img %> " />
          <p><%= menu[i].description %></p>
          <p>$<%= menu[i].price %></p>
          <p><%= menu[i].qty %></p>
          <p><%= menu[i].preparedBy %></p>
          <a href="/menu/<%= menu[i]._id%>"><%= menu[i].name%></a>
          <div><button class="buy">Buy</button></div>
          <form action="/menu/<%= menu[i]._id%>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE" />
          </form>
        </div>
        <% } %>
      </div>
    </main>
  </body>
</html>
