<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <header>
      <div class="logo">
        <img src="/assets/Kathy's baKery.jpg" alt="logo" />
      </div>
      <nav class="nav-menu">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="#">Shop</a></li>
          <li><a href="#">Logout</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <h2>Bakery Deliciousness</h2>
      <div class="container">
        <% for(let i = 0; i < menu.length; i++) { %>
        <div class="menu-card">
          <h3><%= menu[i].name %></h3>
          <p><%= menu[i].description %></p>
          <img src="<%= menu[i].img %> " />
          <p>$<%= menu[i].price %></p>
          <p><%= menu[i].qty %></p>
          <p><%= menu[i].preparedBy %></p>
          <a href="/menu/<%= menu[i]._id%>"><%= menu[i].name%></a>
        </div>
        <% } %>
      </div>
    </main>
  </body>
</html>
